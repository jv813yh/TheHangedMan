<Window x:Class="TheHangedMan.ListThePlayers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheHangedMan"
        mc:Ignorable="d"
        
        Height="300" Width="600"
        MinHeight="300" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Icon="images/gallow.ico">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="THE BEST PLAYERS:" Foreground="DarkCyan"
                       FontSize="25" FontWeight="Black"/>

            <ListBox Name="playersListBox" Height="200" MinHeight="200"
                     Width="400" MinWidth="400" ItemsSource="{Binding}"
                     FontSize="12" FontWeight="Bold" FontFamily="Arial"/>
        </StackPanel>
        
    </Grid>
</Window>
