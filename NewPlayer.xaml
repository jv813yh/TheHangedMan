<Window x:Class="TheHangedMan.NewPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheHangedMan"
        mc:Ignorable="d"
        
        Height="300" Width="600"
        MinHeight="300" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Icon="images/gallow.ico">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Enter your name" HorizontalAlignment="Center"
                       FontSize="30" Foreground="DarkCyan"
                       FontWeight="Black"/>

            <TextBox x:Name="EnterYourNameTxtBox" HorizontalAlignment="Center"
                    FontSize="25" Width="300" Margin="20"/>

            <Button Content="OK" IsDefault="True"
                    Click="SaveBtnClick" HorizontalAlignment="Center"
                    Padding="10,5,10,5" FontSize="25" FontWeight="Heavy"/>

        </StackPanel>
        
    </Grid>
</Window>
